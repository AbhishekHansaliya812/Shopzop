@model Shopzop.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");

    @if (ViewBag.SuccessMessage != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.success('User Created Succesfully', { timeOut: 5000 })
            });
        </script>
    }
    else if (ViewBag.NotLogin != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.error('Please Login', { timeOut: 5000 })
            });
        </script>
    }
    else if (ViewBag.EmailSent != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.success('Email Sent', { timeOut: 5000 })
            });
        </script>
    }
    else if (ViewBag.InvalidUserNamePassword != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.error('User Name or Password is incorrect', { timeOut: 5000 })
            });
        </script>
    }
}

<head>
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
</head>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Login</legend>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div>
            <table>
                <tr>
                    <td>@Html.LabelFor(model => model.UserName)</td>
                    <td>@Html.TextBoxFor(model => model.UserName, new { @class = "", placeholder = "Enter User Name", style = "margin-bottom:5px; margin-left:5px; margin-right:5px" })</td>
                    <td>@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Password)</td>
                    <td>@Html.PasswordFor(model => model.Password, new { @class = "", placeholder = "Enter Password", style = "margin-bottom:5px; margin-left:5px;" })</td>
                    <td>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Login" style="margin-left:5px;" />
                        @Html.ActionLink("Register", "Index", "Registration", null, new { @style = "float:right; margin-top:5px;" })
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.ActionLink("Forgot Password", "ForgetPassword", "Login", null, new { @style = "float:center; margin-top:5px;" })
                    </td>
                    <td></td>
                </tr>
            </table>
        </div>
    </fieldset>
}

